.img-box {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-top: 80rpx;
}
.title{
	font-size: 32rpx;
	font-weight: 600;
}
.bottom-btn {
	height: 80rpx;
	line-height: 80rpx;
	position: fixed;
	bottom: 0;
}
.ipx{
    bottom: 40rpx;
}
.mask {
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.5);
	position: fixed;
	top: 0;
	left: 0;
  }
  .poster {
	background: #fff;
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
  }
  .poster-title-box {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 30rpx;
	background: #f5f5f5
  }
  
  .poster-img {
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 20rpx 0
  }
  .saveImageAction {
	background: #f60f32;
	color: #fff;
	font-size: 28rpx;
	text-align: center;
	padding: 18rpx;
	margin: 0 30rpx;
	border-radius: 8rpx
  }
  
  .saveImageAction-title {
	margin: 20rpx 0 80rpx 0;
	font-size: 28rpx;
	text-align: center;
	color: #666
  }