
  page{
	font-size: 24rpx;
	background: #F4F5F9;
  }
  .container {
	min-height: 100%;
	overflow: hidden;
	overflow-y: hidden;
  }
  
  .userinfo {
	border-radius: 0 0 50% 50%;
	transform: -5% -12%;
	transform: translate(-8%, -3%);
	width: 120%;
	overflow: hidden;
	z-index: 1;
	background-color: #e60214;
	height: 180rpx;
	padding: 48rpx 0;
  }
  
  .userinfo-avatar {
	border-radius: 50%;
	border: 4rpx solid #fff;
	overflow: hidden;
	float: left;
	width: 100rpx;
	height: 100rpx;
	margin-left: 120rpx;
  }
  
  .userinfo-nickname {
	margin-top: 20rpx;
	margin-bottom: 20rpx;
	font-size: 14px;
	margin-left: 20rpx;
	color: #fff;
	float: left;
	background: #e60214;
  }
  
  .userinfo-zuxiao {
	float: right;
	color: #fff;
	margin-right: 120rpx;
	font-size: 28rpx;
	margin-top: 20rpx;
	background: rgba(0, 0, 0, 0.5);
	padding: 12rpx 30rpx;
	border-radius: 10rpx;
  }
  
  .profit-box{
	background: #fff;
	margin-top: 20rpx;
  }
  .profit{
	display: flex;
	margin:40rpx 0;
  }
  .profit-item{
	width: 50%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
  }
  .title{
	margin:12rpx 0;
  }
  .money{
	font-size: 32rpx;
	color: #e63636;
  }
  .btn{
	border:1px solid #ccc;
	padding:12rpx 24rpx;
	border-radius: 16rpx;
  }
  .menu-item {
	height: 104rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background: #fff;
	margin:20rpx 0;
	border-top:1px solid #ccc;
	border-bottom: 1px solid #ccc;
  }
  .menu-item .next {
	width: 56rpx;
	height: 56rpx;
	background: #fff;
	margin-right: 20rpx;
  
  }
  .next-title {
	background: #fff;
	font-size: 28rpx;
	color: #7F7F7F;
	font-weight: 600;
  }